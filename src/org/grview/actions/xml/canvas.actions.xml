<ACTION NAME="saveall">
	<CODE>
		ProjectManager.saveAllFiles();
	</CODE>
</ACTION>
<ACTION NAME="undo">
	<CODE>
		VolatileStateManager vsm = canvas.getVolatileStateManager();
		if (vsm.hasNextUndo()) {
			vsm.undo();
		}
	</CODE>
</ACTION>
<ACTION NAME="redo">
	<CODE>
		VolatileStateManager vsm = canvas.getVolatileStateManager();
		if (vsm.hasNextRedo()) {
			vsm.redo();
		}
	</CODE>
</ACTION>
<ACTION NAME="build">
	<CODE>
		Controller.generateAndParseCurrentGrammar(false);
	</CODE>
</ACTION>
<ACTION NAME="zoom+">
	<CODE>
		if (canvas.canZoomIn()) {
			canvas.setZoomFactor(canvas.getZoomFactor() * 1.1);
			canvas.validate();
		}
	</CODE>
</ACTION>
<ACTION NAME="zoom-">
	<CODE>
		if (canvas.canZoomOut()) {
			canvas.setZoomFactor(canvas.getZoomFactor() * 0.9);
			canvas.validate();
		}
	</CODE>
</ACTION>
